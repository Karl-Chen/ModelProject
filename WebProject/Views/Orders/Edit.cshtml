@model WebProject.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderNo" />
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingDate" class="control-label"></label>
                <input asp-for="ShippingDate" class="form-control" />
                <span asp-validation-for="ShippingDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsGoodPackage" /> @Html.DisplayNameFor(model => model.IsGoodPackage)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ShippingAddr" class="control-label"></label>
                <input asp-for="ShippingAddr" class="form-control" />
                <span asp-validation-for="ShippingAddr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayWayID" class="control-label"></label>
                <select asp-for="PayWayID" class="form-control" asp-items="ViewBag.PayWayID"></select>
                <span asp-validation-for="PayWayID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdertatusID" class="control-label"></label>
                <select asp-for="OrdertatusID" class="form-control" asp-items="ViewBag.OrdertatusID"></select>
                <span asp-validation-for="OrdertatusID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberID" class="control-label"></label>
                <select asp-for="MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                <span asp-validation-for="MemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingWayID" class="control-label"></label>
                <select asp-for="ShippingWayID" class="form-control" asp-items="ViewBag.ShippingWayID"></select>
                <span asp-validation-for="ShippingWayID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回訂單列表</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
