@model IEnumerable<WebProject.Models.ProductSpecification>

@{
    Layout = null;
}

@* //2.3.9 依喜好編輯Default View排版方式 *@
@if (Model.Count() > 0)
{
    <h3 class="text-left">商品類別</h3>
    <div>
        @foreach (var item in Model)
        {
            <a class="list-group-item text-left" asp-action="Index" asp-route-SpecificationID="@item.SpecificationID">@(item.SpecificationName)</a>
        }
        <hr />
        @if (Context.Session.GetString("Manager") == "adminadmin" && Context.Session.GetString("Admin") != null)
        {
            <a class="list-group-item text-left fs-3" asp-action="Index" asp-route-isNeedReplenish="true">庫存量少於5的商品</a>
        }
    </div>
}