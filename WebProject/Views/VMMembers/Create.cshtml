@model WebProject.ViewModels.VMMembers

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h1>註冊帳號</h1>
        <h3 class="text-danger" >@ViewData["ErrMsg"]</h3>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <h6></h6>
            <div class="form-group">
                <label asp-for="Mima" class="control-label"></label>
                <input asp-for="Mima" class="form-control" />
                <span asp-validation-for="Mima" class="text-danger"></span>
            </div>
            <h6></h6>
            <div class="form-group">
                <label asp-for="reMima" class="control-label"></label>
                <input asp-for="reMima" class="form-control" />
                <span asp-validation-for="reMima" class="text-danger"></span>
            </div>
            <h6></h6>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <h6></h6>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <h6></h6>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <h6></h6>
            <div class="form-group">
                <label asp-for="TelNumber" class="control-label"></label>
                <input asp-for="TelNumber" class="form-control" />
                <span asp-validation-for="TelNumber" class="text-danger"></span>
            </div>
            <h6></h6>
            <input name="uAction" value="@ViewBag.uaction" type="hidden" />
            <input name="rRoute" value="@ViewBag.rRoute" type="hidden" />
            <input name="pid" value="@ViewBag.pid" type="hidden" />
            <div class="form-group">
                <input type="submit" value="建立帳號" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
